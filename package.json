{
  "name": "stop-media-stream",
  "version": "2.2.0",
  "description": "Stops all tracks in a MediaStream",
  "keywords": [
    "mediastream",
    "webrtc"
  ],
  "homepage": "https://github.com/bsonntag/stop-media-stream#readme",
  "bugs": {
    "url": "https://github.com/bsonntag/stop-media-stream/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bsonntag/stop-media-stream.git"
  },
  "license": "MIT",
  "author": "Benjamim Sonntag <benjamimsonntag@gmail.com>",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "bundle": "rm -rf dist && tsc && babel src --out-dir dist --ignore **/*.test.js --extensions .ts,.tsx",
    "bundle:watch": "babel src --out-dir dist --watch --ignore **/*.test.js --extensions .ts,.tsx",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch --notify",
    "clean": "rm -rf node_modules",
    "sort-packages": "sort-package-json",
    "reinstall": "npm run clean && npm install",
    "version": "npm run bundle && git add dist"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html",
      "lcov",
      "text"
    ],
    "runner": "jest-electron/runner",
    "testEnvironment": "jest-electron/environment"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-typescript": "^7.14.5",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.7",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-electron": "^0.1.11",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "sort-package-json": "^1.22.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  }
}
